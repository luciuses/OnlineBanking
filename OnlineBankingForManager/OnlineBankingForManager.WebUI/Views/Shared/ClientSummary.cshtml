@model OnlineBankingForManager.Domain.Entities.Client

<tr class="row-list" >
    <td class="td-data" onclick=" location.href = '@(Url.Action(MVC.Manager.Edit(Model.ClientId,Request.Url.PathAndQuery)))' ">@Model.ContractNumber</td>
    <td class="td-data" onclick=" location.href = '@(Url.Action(MVC.Manager.Edit(Model.ClientId, Request.Url.PathAndQuery)))' ">@Model.FirstName</td>
    <td class="td-data" onclick=" location.href = '@(Url.Action(MVC.Manager.Edit(Model.ClientId, Request.Url.PathAndQuery)))' ">@Model.LastName</td>
    <td class="td-data" onclick=" location.href = '@(Url.Action(MVC.Manager.Edit(Model.ClientId, Request.Url.PathAndQuery)))' ">@Model.DateBirth.ToShortDateString()</td>
    <td class="td-data" onclick=" location.href = '@(Url.Action(MVC.Manager.Edit(Model.ClientId, Request.Url.PathAndQuery)))' ">@Model.PhoneNumber</td>
    <td class="td-data" onclick=" location.href = '@(Url.Action(MVC.Manager.Edit(Model.ClientId, Request.Url.PathAndQuery)))' ">@Model.Status</td>
    <td class="td-data" onclick=" location.href = '@(Url.Action(MVC.Manager.Edit(Model.ClientId, Request.Url.PathAndQuery)))' ">@Html.DisplayFor(m => m.Deposit, new { @class = "checkbox-list" })</td>
    <td class="td-delete">
        @using (Html.BeginForm(MVC.Manager.ActionNames.Delete, MVC.Manager.Name, new { returnUrl = Request.Url.PathAndQuery }, FormMethod.Post, new { @class = "form-delete-edit" }))
        {
            @Html.Hidden("ClientId", Model.ClientId)
            <input type="submit" value="" class="submit-delete" title="Click for delete client."/>
        }
   
    </td>
</tr>
<script>

    $('.td-data').attr('title', 'Click for edit client');
</script>