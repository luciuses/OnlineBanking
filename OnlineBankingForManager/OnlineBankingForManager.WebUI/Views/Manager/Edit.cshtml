@using System.Collections
@using OnlineBankingForManager.Domain.Entities
@model OnlineBankingForManager.Domain.Entities.Client

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}
<link rel="stylesheet/less" type="text/css" href="~/Content/EditStyle.less">
<script src="~/Scripts/less-1.7.0.js" type="text/javascript"></script>
<div class="container-table">
    @using (Html.BeginForm("Edit", "Manager"))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m=>m.ClientId)
    
        <table class="table-input-fields">
        
            <tr>
                <td></td>
                <td>Edit @Model.FirstName:</td>
            </tr>
            
            <tr>
                <td class="label-input-field">@Html.LabelFor(m => m.ContractNumber):</td>
                <td>@Html.TextBoxFor(m => m.ContractNumber,new{@class= "input-field",@title="Client's contract number",@type="number"})</td>
                <td>@Html.ValidationMessageFor(m => m.ContractNumber)</td>
            </tr>
            <tr>
    
                <td class="label-input-field">@Html.LabelFor(m => m.FirstName):</td>
                <td>@Html.TextBoxFor(m => m.FirstName,new{@class= "input-field",@title="Client's firstname"})</td>
                <td>@Html.ValidationMessageFor(m => m.FirstName)</td>
            </tr>
            
            <tr>
                <td class="label-input-field">@Html.LabelFor(m => m.LastName):</td>
                <td>@Html.TextBoxFor(m => m.LastName,new{@class= "input-field",@title="Client's lastname"})</td>
                <td>@Html.ValidationMessageFor(m => m.LastName)</td>
            </tr>

            <tr>
                <td class="label-input-field">@Html.LabelFor(m => m.DateBirth):</td>
                <td>@Html.TextBoxFor(m => m.DateBirth,"{0:yyyy-MM-dd}",new{@class= "input-field",@title="Client's date of birth",@type="date",})</td>
                <td>@Html.ValidationMessageFor(m => m.DateBirth)</td>
            </tr>

            <tr>
                <td class="label-input-field">@Html.LabelFor(m => m.PhoneNumber):</td>
                <td>@Html.TextBoxFor(m => m.PhoneNumber,new{@class= "input-field",@title="Client's phone number"})</td>
                <td>@Html.ValidationMessageFor(m => m.PhoneNumber)</td>
            </tr>
            
            <tr>
                <td class="label-input-field">@Html.LabelFor(m => m.Status):</td>
                <td>@Html.DropDownListFor(m=>m.Status,new SelectList(ViewData["StatusList"] as IEnumerable), new {@title= "Client's status."})</td>
                <td>@Html.ValidationMessageFor(m => m.Status)</td>
            </tr>
            <tr>
                <td></td>
                <td class="checkbox">@Html.CheckBoxFor(m => m.Deposit, new {@title= "Client use deposit."})
                    - @Html.LabelFor(m => m.Deposit)</td>
                <td>@Html.ValidationMessageFor(m => m.Deposit)</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" title="Press for submit"/></td>
            </tr>
            <tr><td></td><td>
                             @Html.ActionLink("Cancel and return to List", "List")
                         </td></tr>
        </table>
 }
  
       
</div>